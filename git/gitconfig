[user]
	name = Marek Mikuliszyn
	email = marek.mikuliszyn@gmail.com
[core]
	autocrlf = input
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
	excludesfile = ~/.gitignore
[init]
	defaultBranch = master
[apply]
	whitespace = fix
[branch]
	autosetupmerge = true
	sort = -committerdate
[rebase]
	autoStash = true	
[pull]
	rebase = true
[fetch]
	prune = true
[push]
	default = tracking
[log]
	decorate = short
[pager]
	status = true
	show-branch = true
[format]
	numbered = auto
[alias]
	st = status
	ci = commit
	co = checkout
	ru = remote update
	br = branch
	cam = commit -a -m
	p = pull
	pr = pull --rebase
	praise = blame
	staged = diff --cached
	unstaged = diff
	both = diff HEAD
	oneline = log --oneline
	amend = commit --amend
	undo = reset --hard HEAD^
	tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
	hist = !tig
	myhist = !git log --author=\"$(git config user.name)\" --format=%H |xargs git show --name-only --format=-------------%n%Cred%s%Creset%n%Cblue%h%Creset
	# Safe cleanup: prunes remote branches and deletes merged local branches only
	# Use 'trim-force' if you need to delete unmerged branches (dangerous!)
	trim = !git remote prune origin && git repack && git prune-packed && git reflog expire --expire=1.month.ago && git gc --aggressive && git branch --merged | grep -v -E '\\*|master|main|development|integration|production' | xargs -r git branch -d
	trim-force = !echo "⚠️  WARNING: This will FORCE DELETE unmerged branches!" && read -p "Continue? (y/N): " confirm && [ \"$confirm\" = "y" ] && git remote prune origin && git repack && git prune-packed && git reflog expire --expire=1.month.ago && git gc --aggressive && git branch | grep -v -E '\\*|master|main|development|integration|production' | xargs -r git branch -D
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[rerere]
	enabled = true
[column]
	ui = auto
